@model HotelGolfBooking.Models.list_provin

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm mới tỉnh thành</h2>

@using (Html.BeginForm("Create", "ListProvince", FormMethod.Post, new { id = "EditForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
		<div class="col-md-6">
			<div class="form-group">
					<label for="room" style="width:auto;display:block;">Tên tỉnh(thành phố):</label>
					<input name="provin" type="text" id="provin" value="" class="form-control" style="width:60%;" placeholder="Gõ tên "/>
					@Html.ValidationMessageFor(model => model.provin)
			</div>
		</div>
        <p>
            <input type="button" class="btn btn-info" onclick="checkField();" value="Thêm" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
   

    function checkField() {
        if (document.getElementById("provin").value.trim() == "") {
            alert("Nhập tỉnh thành!");
            document.getElementById("provin").focus();
            return false;
        }
        document.getElementById("provin").value = document.getElementById("provin").value.replace("-", ",");
        document.getElementById("EditForm").submit();
    }
</script>