@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
  <div class="row"> 
    <!-- Contact form -->
    <section id="contact-form" class="mt50">
      <div class="col-md-8">
        <h2 class="lined-heading"><span>Phản hồi dịch vụ</span></h2>
        <p>Về đặt phòng khách sạn, golf tours, hoặc phản hồi về dịch vụ của chúng tôi khi bạn đã sử dụng</p>
        <div id="message"></div>
        <!-- Error message display -->
        
        @using (Html.BeginForm("Create", "Feedback", FormMethod.Post, new { id = "EditForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
          <fieldset>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label for="name" accesskey="U" class="wauto"><span class="required">*</span> Họ tên</label>
                <input name="cname" type="text" id="cname" class="form-control" value=""/>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="email" accesskey="E" class="wauto"><span class="required">*</span> E-mail</label>
                <input name="cemail" type="text" id="cemail" value="" class="form-control"/>
              </div>
            </div>
			<div class="col-md-6">
              <div class="form-group">
				<label for="subject" accesskey="S" class="wauto">Chủ đề</label>
				<select name="topic" id="topic" class="form-control" onchange="selectCatFeedback();">
				  <option value="other" selected disabled value="">Chọn dịch vụ phản hồi</option>
				  <option value="Dịch vụ đặt phòng khách sạn">Dịch vụ đặt phòng khách sạn</option>
				  <option value="Dịch vụ đặt sân golf">Dịch vụ đặt sân golf</option>				  
				</select>
			  </div>
            </div>
            <div class="col-md-6" id="divHotelName" style="display:none;">
              <div class="form-group">
				<label for="name" accesskey="U" class="wauto"><span class="required">*</span> Tên khách sạn bạn đã đặt phòng:</label>
                <input name="hotelname" type="text" id="hotelname" class="form-control" value=""/ onkeyup="searchHotel();">
              
			  </div>
            </div>
            <div class="col-md-6" id="divGolfName" style="display:none;">
              <div class="form-group">
				<label for="name" accesskey="U" class="wauto"><span class="required">*</span> Tên sân golf bạn đã đặt phòng:</label>
                <input name="golfname" type="text" id="golfname" class="form-control" value="" onkeyup="searchGolf();"/>
               
			  </div>
            </div>
			<div class="col-md-6">
              <div class="form-group">
				<label for="email" accesskey="E"><span class="required">*</span>Địa chỉ</label>
                <input name="caddress" type="text" id="caddress" value="" class="form-control"/>
			  </div>
            </div>
          </div>
          <div class="form-group">
            <label for="comments" accesskey="C"><span class="required">*</span> Nội dung</label>
            <textarea name="fullcontent" rows="9" id="fullcontent" class="form-control" maxlength="400"></textarea>
          </div>          
          <button type="button" class="btn btn-info" onclick="checkField();">Gửi</button>
        </fieldset>
        }
      </div>
    </section>
    
    <!-- Contact details -->
    <section class="contact-details mt50">
      <div class="col-md-4">
        <h4>Địa chỉ</h4>
        <div id="divCompanyAdress2">
            <script>getCompanyAddress2();</script>
        </div>
      </div>
    </section>
  </div>
</div>
<script>
    function checkField() {
        if (document.getElementById("cname").value == "") {
            alert("Nhập tên khách hàng!");
            document.getElementById("cname").focus();
            return false;
        }
        if (document.getElementById("cemail").value == "") {
            alert("Nhập địa chỉ cemail!");
            document.getElementById("cemail").focus();
            return false;
        }
        if (document.getElementById("caddress").value == "") {
            alert("Nhập địa chỉ !");
            document.getElementById("caddress").focus();
            return false;
        }
        if (document.getElementById("topic").value == "") {
            alert("Nhập chủ đề phản hồi!");
            document.getElementById("topic").focus();
            return false;
        }

        document.getElementById("EditForm").submit();
    }
    function selectCatFeedback() {
        if ($("#topic").val() == "Dịch vụ đặt phòng khách sạn") {
            $("#divHotelName").show();
            $("#golfname").val() = "";
            $("#divGolfName").hide();
        } else {
            $("#divGolfName").show();
            $("#hotelname").val() = "";
            $("#divHotelName").hide();
        }
    }
</script>