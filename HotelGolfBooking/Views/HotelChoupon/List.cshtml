@{
    ViewBag.Title = "Khách sạn Voucher giảm giá";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string linkPage = "/HotelChoupon/List?provin=" + ViewBag.provin + "&checkin=" + ViewBag.fdate + "&page=";
    int totalitem = int.Parse(ViewBag.totalitem.ToString());
}

<!-- Parallax Effect -->
<script type="text/javascript">$(document).ready(function(){$('#parallax-pagetitle').parallax("50%", -0.55);});</script>

<section class="parallax-effect">
  <div id="parallax-pagetitle" style="background-image: url(./images/parallax/1900x911.gif);">
    <div class="color-overlay"> 
      <!-- Page title -->
      <div class="container">
        <div class="row">
          <div class="col-sm-12">            
            <h1 style="margin-top:2px;">Coupon - Siêu tiết kiệm, số lượng có hạn</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Filter -->
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <ul class="nav nav-pills" id="filters" class="wauto">
        <li class="active" style="width:150px;"><a href="/HotelChoupon/List" style="width:auto;">Chọn thành phố</a></li>
        <li><select class="form-control" name="provin" id="provin" >
                  @Html.Raw(@ViewBag.selectprovin)             
            </select> 
		</li>        
        <li>
            <input name="checkin" type="text" id="checkin" value="@HotelGolfBooking.Config.convertFromDateIdToDateString(@ViewBag.fdate.ToString())" class="form-control" placeholder="Ngày chơi" style="width:100px;"/> 
        </li>   
        <li><input type="button" value="Tìm kiếm" class="btn btn-info" onclick="searchHotelList();"></li>  
      </ul>
    </div>
  </div>
</div>

<!-- Rooms -->
<section class="rooms mt100">
  <div class="container">
    <div class="row room-list fadeIn appear">
        @Html.Raw(@ViewBag.content )
        <div class="col-md-12">
            <ul class="pagination clearfix">
                    <li class="disabled"><a href="#">«</a></li>
                    @for (int i = 1; i <= totalitem/HotelGolfBooking.Config.PageSize; i++)
                    { 
                         <text><li><a href="@linkPage@i">@i</a></li></text>
                    }
            </ul>
         </div>
    </div>
  </div>
</section>
<script>
    $("#provin").val("@Html.Raw(@ViewBag.provin)");
    function searchHotelList() {
        window.location.href = "/HotelChoupon/List?provin=" + document.getElementById("provin").value + "&checkin=" + getDateId(document.getElementById("checkin").value);
    }
</script>