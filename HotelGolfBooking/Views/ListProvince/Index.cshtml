@model PagedList.IPagedList<HotelGolfBooking.Models.list_provin>
@using PagedList.Mvc; 

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-12">
        <div class="form-group">
                <label for="room" style="width:auto;display:block;">Tên tỉnh thành</label>
                <input name="provin" type="text" id="provin" value="" class="form-control" style="width:auto;"/>                                  
                <button type="button" class="btn btn-info" onclick="search();">Tìm kiếm</button>  
                <button type="button" class="btn  btn-lg btn-info" style="float:right;" onclick="add();">Thêm mới</button> 
        </div>
</div>
<h2>Danh sách Tỉnh thành</h2>
<div class="col-md-12">
<table class="tbl_price_room">
    <tr>
        <th>
            Tên tỉnh thành
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr style="border-bottom:solid 1px #808080;">
        <td>
            @Html.DisplayFor(modelItem => item.provin)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |            
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
</div>
<div class="col-md-12">
<ul class="pagination clearfix">
        <li class="disabled"><a href="#">«</a></li>
        @for (int i = 1; i <= Model.PageCount; i++)
        { 
                            <text><li><a href="/ListProvince/Index?provin=@ViewBag.provin&page=@i">@i</a></li></text>
                        }
</ul>
</div>
<script>
    function search() {
        window.location.href = "/ListProvince/Index?provin=" + document.getElementById("provin").value;
    }
    function add() {
        window.location.href = "/ListProvince/Create";
    }
</script>