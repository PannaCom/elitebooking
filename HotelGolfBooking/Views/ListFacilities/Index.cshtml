@model IEnumerable<HotelGolfBooking.Models.list_facilities>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Danh mục Tiện ích khách sạn</h2>
<p>
    <a href="/ListFacilities/Create" class="btn btn-info">Thêm mới</a>
</p>
<div class="col-md-12">
<table class="tbl_price_room">
    <tr>
        <th>
            Tên
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |            
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
</div>
